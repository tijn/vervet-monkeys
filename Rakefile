# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/url_watcher.rb'

Hoe.new('url_watcher', WatcherInTheWater::VERSION) do |p|
  p.developer('Phil Hagelberg', 'http://technomancy.us')
  p.url = 'http://en.wikipedia.org/wiki/Watcher_in_the_Water'
  p.extra_deps << 'xmpp4r'
end

